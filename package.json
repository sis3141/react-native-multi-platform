{
  "name": "athler",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/react-native-dev-menu"
    ]
  },
  "scripts": {
    "android:metro": "yarn workspace @athler/mobile start",
    "android:start": "yarn workspace @athler/mobile android",
    "android:studio": "yarn workspace @athler/mobile studio",
    "ios:metro": "yarn workspace @athler/mobile start",
    "ios:start": "yarn workspace @athler/mobile ios",
    "ios:xcode": "yarn workspace @athler/mobile xcode",
    "ios:pods": "yarn workspace @athler/mobile pods",
    "web:start": "yarn workspace @athler/web start",
    "web:build": "yarn workspace @athler/web build",
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
    "test": "ultra -r test",
    "typecheck": "ultra -r typecheck"
  },
  "devDependencies": {
  }
}
