{
  "name": "athler",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-web",
      "**/react-native-codegen",
      "**/react-native-dev-menu",
      "**/react-native-svg",
      "**/react-native-reanimated",
      "**/react-native-gesture-handler",
      "**/react-native-animateable-text",
      "**/@react-navigation/native",
      "**/@react-navigation/stack",
      "**/react-native-screens",
      "**/react-native-safe-area-context",
      "**/@react-native-async-storage/async-storage"
    ]
  },
  "scripts": {
    "reset-metro-cache": "yarn workspace @athler/mobile reset-cache",
    "android:metro": "yarn workspace @athler/mobile start",
    "android:start": "yarn workspace @athler/mobile android",
    "android:studio": "yarn workspace @athler/mobile studio",
    "ios:metro": "yarn workspace @athler/mobile start",
    "ios:start": "yarn workspace @athler/mobile ios",
    "ios:xcode": "yarn workspace @athler/mobile xcode",
    "ios:pods": "yarn workspace @athler/mobile pods",
    "web:start": "yarn workspace @athler/web start",
    "web:build": "yarn workspace @athler/web build",
    "server:linux": "yarn workspace @athler/server linux-pm2",
    "server:windows": "yarn workspace @athler/server windows-nodemon",
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
    "test": "ultra -r test",
    "typecheck": "ultra -r typecheck"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.72.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6",
    "ultra-runner": "^3.10.5"
  },
  "packageManager": "yarn@3.6.1"
}
